<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:topbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zhangyanye.didipark.view.TopBar
        android:id="@+id/customer_comment_topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@color/splash_color"
        topbar:left_img="@drawable/ic_back"
        topbar:title_text="@string/customer_comment_topbar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/customer_comment_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/gray_cc"
            android:dividerHeight="@dimen/line"
            android:scrollbars="none" >
        </ListView>

        <LinearLayout
            android:id="@+id/customer_comment_view_group"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y30"
            android:orientation="horizontal" />
    </FrameLayout>
</LinearLayout>