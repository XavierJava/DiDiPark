<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/x10"
    android:paddingRight="@dimen/x10"
    android:paddingTop="@dimen/x5"
    android:paddingBottom="@dimen/x5"
    android:background="@drawable/bg_account_button"
    android:orientation="horizontal" 
    android:gravity="center_vertical">


        <com.zhangyanye.didipark.view.CircleImageView
            android:id="@+id/order_iv_img"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y47"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_on"
            circle:border_color="@color/white"
            circle:border_overlay="false"
            circle:border_width="@dimen/x3" />

        <RelativeLayout        
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginStart="@dimen/x5"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/order_tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"  
                android:ems="9"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="20sp" />
        

        <RelativeLayout
            android:layout_marginTop="@dimen/y5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_tv_place" >

            <TextView
                android:id="@+id/order_tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="+15"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/order_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" 
                android:text="+15"
                android:textColor="@color/gray"
                android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>

</LinearLayout>